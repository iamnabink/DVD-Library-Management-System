@model ADCW.Models.ApplicationUserRoleViewModel
@{
    ViewBag.Title = "Assign Role to User";
    ViewBag.SubTitle = "[Task 14] Manager is allowed to assign roles to any User";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="form-group">
            @Html.Label("UserId", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.UserId, null, htmlAttributes: new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("RoleId", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.RoleId, null, htmlAttributes: new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <input type="submit" value="Assign" class="btn btn-info ml-3" />
            @Html.ActionLink("Back to List", "viewUsers", null, new { @class = "btn btn-secondary" })
        </div>
    </div>
}